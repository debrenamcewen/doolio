extends layout

block content


    .container
      div.login
          .row
            .col-sm-8.col-sm-offset-2.col-md-4.col-md-offset-4.col-lg-6.col-lg-offset-3
              h1.text-center.login-title doolio
              .account-wall
                form.form-signin
                  input.form-control(type='text', placeholder='Email', required='', autofocus='')
                  br
                  input.form-control(type='password', placeholder='Password', required='')
                  br
                  button.btn.btn-lg.btn-primary.btn-block(type='submit')
                    | Sign in
                  label.checkbox.pull-left
                  span.clearfix
                  .container
                    .row.col-md-offset-1
                  // Button trigger modal
                  button.btn.btn-primary.btn-lg(type='button', data-toggle='modal', data-target='#myModal')
                    | Sign Up

            // Modal
            #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
              .modal-dialog(role='document')
                .modal-content
                  .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                      span(aria-hidden='true') Ã—
                    h6#myModalLabel.modal-title Sign Up
                  form.modal-body( method="post", action="/user/signup" )

                    fieldset


                      .control-group
                        // Username
                        label.control-label(for='username') Username
                        .controls
                          input#username.input-xlarge(type='text', name='UserName', placeholder='')
                          p.help-block Username can contain any letters or numbers, without spaces
                      .control-group
                        // E-mail
                        label.control-label(for='email') E-mail
                        .controls
                          input#email.input-xlarge(type='text', name='Email', placeholder='')
                          p.help-block Please provide your E-mail
                      .control-group
                        // Password
                        label.control-label(for='password') Password
                        .controls
                          input#password.input-xlarge(type='password', name='Password', placeholder='')
                          p.help-block Password should be at least 4 characters

                          .modal-footer
                            button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                            button.btn.btn-primary(type='submit') Save changes
