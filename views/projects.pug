extends layout

block content

    div.white-background
      .row
        .col-xs-12.col-sm-10.col-sm-offset-1.col-md-10.col-md-offset-1
          nav.navbar.navbar-light.bg-faded
            ul.nav.navbar-nav
              li.nav-item.active
                  span.sr-only (current)
              li.nav-item
                a.nav-link(href='#') PROJECTS
              li.nav-item
                a.nav-link(href='#') TASKS
            form.form-inline.float-xs-right
              div.search-box
                input.form-control(type='text', placeholder='Search')
                button.btn.btn-outline-success(type='submit') Search
                br
                br

      hr

      .row
        .col-xs-12.col-sm-10.col-sm-offset-1.col-md-10.col-md-offset-1
          .tasks-box

      //- ol
      //-   each project in projects
      //-     li
      //-       a(href="/projects/"+project.id)= project.Name

      .new-project
        .col-xs-12.col-sm-10.col-sm-offset-1.col-md-10.col-md-offset-1
          button.btn.btn-primary.btn-lg(type='button', data-toggle='modal', data-target='#myModal') New Project

        // Modal
        #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
          .modal-dialog(role='document')
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') Ã—
                h4#myModalLabel.modal-title New Project
              form.modal-body( method="post", action="/user/signup" )

                fieldset


                  .control-group
                    // Project Name
                    label.control-label(for='project name') Project Name
                    .controls
                      input#username.input-xlarge(type='text', name='UserName', placeholder='')
                      p.help-block
                  .control-group
                    // Description
                    label.control-label(for='description') Description
                    .controls
                      textarea.span6(rows='3', required='')


                      .modal-footer
                        button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                        button.btn.btn-primary(type='submit') Save changes
                        //- button.btn.btn-danger(type='button') Delete Project
